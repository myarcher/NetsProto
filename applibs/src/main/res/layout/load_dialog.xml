<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loading"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/loading_width"
    android:layout_gravity="center"
    android:alpha="0.9"
    android:background="@drawable/dialog_custom_bg"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="@dimen/dimen_120px"
        android:layout_height="@dimen/dimen_120px"
        android:gravity="center"
        android:orientation="vertical">

        <com.nets.applibs.view.SpinView
            android:layout_width="@dimen/dimen_30px"
            android:layout_height="@dimen/dimen_30px"
            android:layout_marginTop="@dimen/dimen_10px" />

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10px"
            android:singleLine="true"
            android:text="@string/loading"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/dimen_16px"
            android:textStyle="normal" />

    </LinearLayout>

</LinearLayout>