<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/base_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_95px"
        android:background="@android:color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_weight="1"
            android:id="@+id/base_title_bar_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_30px"
            android:paddingHorizontal="@dimen/dimen_20px">

            <ImageView
                android:id="@+id/base_title_back"
                android:layout_width="@dimen/dimen_30px"
                android:layout_height="@dimen/dimen_30px"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_5px"
                android:src="@mipmap/back_black" />

            <TextView
                android:id="@+id/base_title_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_15px"
                android:ellipsize="end"
                android:maxLength="15"
                android:layout_centerInParent="true"
                android:text="消息中心"
                android:textColor="#454552"
                android:textStyle="bold"
                android:textSize="@dimen/dimen_24px" />

            <TextView
                android:id="@+id/base_title_right_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="完成"
                android:textColor="#333333"
                android:textSize="@dimen/dimen_19px"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/base_title_right"
                android:layout_width="@dimen/dimen_25px"
                android:layout_height="@dimen/dimen_25px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:visibility="gone" />
        </RelativeLayout>
    <View
        android:id="@+id/base_title_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#f5f5f5"/>
    </LinearLayout>