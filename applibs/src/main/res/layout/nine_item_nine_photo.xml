<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/iv_item_nine_photo_photo_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.nets.applibs.view.ShapeImageView
        android:id="@+id/iv_item_nine_photo_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        tools:src="@mipmap/bga_pp_ic_holder_light" />

    <ImageView
        android:id="@+id/iv_item_nine_photo_flag"
        android:layout_width="@dimen/dimen_30px"
        android:layout_height="@dimen/dimen_30px"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:padding="@dimen/bga_pp_size_delete_padding"
        android:src="@mipmap/bga_pp_ic_delete"
        android:visibility="gone"
        tools:visibility="visible" />

</RelativeLayout>